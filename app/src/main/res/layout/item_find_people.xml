<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="3dp"
    android:elevation="3dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:paddingBottom="@dimen/dp_16"
    android:layout_marginBottom="5dp"
    android:paddingTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_marginTop="16dp"
                android:src="@drawable/default_image"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <com.example.dell.appcuxa.CustomeView.RobBoldText
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/tvUserName"
                android:textColor="@color/black"
                android:text="Trương Thiếu Huyền"
                android:layout_height="wrap_content" />
            <com.example.dell.appcuxa.CustomeView.RobLightText
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:text="Giới tính: nam"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
        <com.example.dell.appcuxa.CustomeView.RobLightText
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:text="Nguyễn Trãi, Thanh Xuân, Hà Nội"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <com.example.dell.appcuxa.CustomeView.RobLightText
            android:id="@+id/tvPrice"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:text="0 VNĐ - 6 triệu VNĐ"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>