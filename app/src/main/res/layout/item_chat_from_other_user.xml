<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MesHolderTextFriend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="40dp"
    android:padding="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_toRightOf="@+id/imgTextFriend"
            android:id="@+id/messFriend"
            android:layout_toEndOf="@+id/imgTextFriend"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:id="@+id/imgAvatar"
                android:src="@drawable/default_image"
                android:layout_height="45dp" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/chat_from_friend"
                    android:padding="10dp"
                    android:id="@+id/tvFriendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Nguyễn Văn Trường"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    />
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:layout_marginTop="2dp"
                    android:text="Sent at 10:10"
                    android:id="@+id/tvTimeFriendSent"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>