<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/layout_item"
    android:background="@drawable/ripple_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
           >
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v4.view.ViewPager
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:id="@+id/imgHinh"
                        android:cropToPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                    <CheckBox
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:button="@drawable/custome_checkbox_save"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/imgSave"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content" />
                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_marginTop="152dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.dell.appcuxa.CustomeView.RobLightText
                        android:id="@+id/tvPurpose"
                        tools:text="Tìm người thuê trọ"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content" />
                    <com.example.dell.appcuxa.CustomeView.RobLightText
                        android:id="@+id/tvPrice"
                        android:gravity="end"
                        tools:text="6tr2/phòng"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <com.example.dell.appcuxa.CustomeView.RobBoldText
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/tvName"
                    tools:text="Cho thuê căn 32m2 giá rẻ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:id="@+id/tvAddress"
                    tools:text="Nguyễn Trãi, quận Thanh Xuân, Hà Nội"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>